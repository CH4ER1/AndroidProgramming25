// 글 작성 화면
<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#FFFFFF">

    <LinearLayout
        android:id="@+id/archieveLayout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="16dp">

        <!-- 상단 제목 -->
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="기록 작성하기"
            android:background="#2A7C32"
            android:padding="12dp"
            android:textColor="#ffffff"
            android:textSize="18sp"
            android:textStyle="bold"
            android:gravity="center" />

        <!-- 제목 입력 -->
        <EditText
            android:id="@+id/editTitle"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="제목을 입력하세요" />

        <!-- 별점 -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center"
            android:layout_marginTop="12dp"
            android:id="@+id/starLayout">

            <!-- 별 아이콘 5개 (버튼처럼 작동) -->
            <ImageView android:id="@+id/star1" android:layout_width="40dp" android:layout_height="40dp" android:src="@drawable/emptystar" />
            <ImageView android:id="@+id/star2" android:layout_width="40dp" android:layout_height="40dp" android:src="@drawable/emptystar" />
            <ImageView android:id="@+id/star3" android:layout_width="40dp" android:layout_height="40dp" android:src="@drawable/emptystar" />
            <ImageView android:id="@+id/star4" android:layout_width="40dp" android:layout_height="40dp" android:src="@drawable/emptystar" />
            <ImageView android:id="@+id/star5" android:layout_width="40dp" android:layout_height="40dp" android:src="@drawable/emptystar" />
        </LinearLayout>

        <!-- 사진 선택 -->
        <ImageView
            android:id="@+id/imageSelect"
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="16dp"
            android:src="@drawable/gallery"
            android:contentDescription="사진 추가" />

        <!-- 분야 선택 -->
        <Spinner
            android:id="@+id/spinnerCategory"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="16dp"
            android:spinnerMode="dropdown" />

        <!-- 내용 입력 -->
        <EditText
            android:id="@+id/editContent"
            android:layout_width="match_parent"
            android:layout_height="150dp"
            android:hint="내용을 입력하세요"
            android:background="@drawable/edittext_background"
            android:gravity="top"
            android:inputType="textMultiLine"
            android:layout_marginTop="16dp" />

        <!-- 작성 완료 버튼 -->
        <Button
            android:id="@+id/btnSubmit"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="작성 완료"
            android:layout_gravity="center"
            android:layout_marginTop="16dp"
            android:backgroundTint="#DDC196"
            android:textColor="#ffffff" />

        <!-- 하단 내비게이션 -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="#f5f5f5"
            android:gravity="center"
            android:orientation="horizontal"
            android:layout_marginTop="20dp">

            <ImageView android:layout_width="76dp" android:layout_height="40dp" android:src="@drawable/archieve1" />
            <ImageView android:layout_width="76dp" android:layout_height="40dp" android:src="@drawable/star1" />
            <ImageView android:layout_width="76dp" android:layout_height="40dp" android:src="@drawable/post1" />
            <ImageView android:layout_width="76dp" android:layout_height="40dp" android:src="@drawable/setting1" />
        </LinearLayout>

    </LinearLayout>
</ScrollView>
